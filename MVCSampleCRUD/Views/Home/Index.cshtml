@model IEnumerable<MVCSampleCRUD.Models.Datebase1>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            編號
        </th>
        <th>
            姓名
        </th>
        <th>
            性別
        </th>
        <th>
            到職日
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.fId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.fTitle)
    </td>
    <td>
        <img src="~/Image/@item.fImage" width="32"/>
    </td>
    <td>
        @DateTime.Parse(item.fDate.ToString()).ToShortDateString()
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.fId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.fId },new { onclick="return confirm('確定刪除嗎')"})
    </td>
</tr>
}

</table>
